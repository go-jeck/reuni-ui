<div class="container">
  <div class="row justify-content-center">
    <a href="/<%= @org %>/services/new" class="btn btn-info" style="text-decoration:none;">
      Add new namespace +
    </a>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-10">
      <table class="table table-hover text-center">
        <thead>
          <th>Service Name</th>
          <th>Action</th>
        </thead>

        <tbody>
          <% @services.each do |service|%>
            <tr>
              <td><%= service["name"] %></td>
              <td>
                <a href="/namespace/<%= service["name"] %>">
                  View Namespaces
                </a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
