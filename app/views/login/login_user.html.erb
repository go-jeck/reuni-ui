<div class="container" style="margin-top: 100px">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row justify-content-center">
                        <h3 style="color: #008000"><img src="<%= image_path('reuni-logo.png') %>" class="login-logo" alt=""> Re:uni</h3>
                    </div>
                    <hr>
                </div>    
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12 ">
                            <form id="login-form" action="<%= login_verifyuser_path %>" method="post" role="form" style="display: block;">
                                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">  
                                <div class="form-group row justify-content-center">
                                    <input type="text" name="username" id="username" tabindex="1" class="form-control text-center col-md-8" placeholder="Username" value="">
                                </div>
                                <div class="form-group row justify-content-center">
                                    <input type="password" name="password" id="password" tabindex="2" class="form-control text-center col-md-8" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <div class="row justify-content-center">
                                        <div class="col-sm-6">
                                            <button type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-md btn-success"> Log In </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <% if @error %>
                    <div class="alert alert-danger">
                        <%= @error["message"] %>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="col-md-6 offset-md-3">
            <div class="row justify-content-center">
                <%= link_to "Dont have an account yet? Sign up now!", signup_path%>
            </div>
        </div>
    </div>
</div>
