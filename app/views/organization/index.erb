<div class="container">
<h3 class="text-center">
  List of Organization
</h3>
<div class="row justify-content-center">
  <div class="col-md-10">
    <table class="table table-hover text-center">
      <thead>
      <th>Organization</th>
      <th>Role</th>
      <th>Action</th>
      </thead>

      <tbody>
      <% if @data %>
        <% @data.each do |org|%>
          <tr>
            <td><%= org["name"] %></td>
            <td><%= org["role"] %></td>
            <td>
              <a href="/<%=org["name"]%>/services/">
                View Configs
              </a>
            </td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>

  </div>
</div>

</div>