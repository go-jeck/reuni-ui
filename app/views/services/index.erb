<div class="row" id="app">
    <div class="col-md-3 sidebar">
        <%= render :partial => 'organization/sidebar'%>
    </div>
    <div class="col-md-9">
        <div class="container">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs nav-justified green accent-4" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#panel5" role="tab">
                    <i class="fa fa-suitcase"></i> Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#panel6" role="tab">
                    <i class="fa fa-user"></i> Members</a>
                </li>
            </ul>
            <!-- Nav tabs -->
            <!-- Tab panels -->
            <div class="tab-content">
                <!--Panel 1-->
                <div class="tab-pane fade in show active" id="panel5" role="tabpanel">
                    <!-- Nav tabs -->
                    <div class="section">
                        <% if @services.length > 0 %>
                            <% @services.each do |serv| %>
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row justify-content-between ml-4 mr-4">
                                            <div>
                                                <h6 class="card-title d-flex align-items-center mt-auto mb-auto ml-2"><a><%= serv["name"]%></a></h6>
                                                <a href="/<%= params["organization"]%>/<%= serv["name"] %>/namespaces" class="btn btn-success btn-sm">Explore</a>
                                            </div>
                                            <div class="text-right">
                                                <small class="color-disabled ">
                                                    <span><%= serv["created_by"] %> <i class="fa fa-user"></i></span><br>
                                                    <span><%= l(Time.parse(serv["created_at"]).in_time_zone, :format => :long) %> <i class="fa fa-calendar"></i></span><br>
                                                </small>
                                            </div>
                                        </div>
                                        <div class="d-flex">
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        <%else %>
                            <%= render :partial => 'shared/nodata' %>
                        <% end %>
                    </div>
                    <div class="row justify-content-center mt-4">
                        <a href="/<%= @org %>/services/new" class="btn btn-success btn-md d-flex align-items-center" style="text-decoration:none;">
                            <i class="fa fa-plus-circle"></i>&nbsp;New
                        </a>
                    </div>
                    <!-- Nav tabs -->
                </div>
                <!--/.Panel 1-->
                <!--Panel 2-->
                <div class="tab-pane fade" id="panel6" role="tabpanel">
                    <br>
                    <%= render :partial => 'organization_member/index'%>
                </div>
                <!--/.Panel 2-->
            </div>
            <!-- Tab panels -->
        </div>
    </div>
</div>
