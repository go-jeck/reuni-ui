<div class="row" id="app">
  <div class="col-md-3 sidebar">
    <%= render :partial => 'shared/organization'%>
  </div>
  <div class="col-md-9">
    <div class="container">
    <h3 class="text-left">
      Create New Organization
    </h3>
    <div class="row">
      <div class="col-md-6">
        <form action="/organization/create" method="post">
          <% if @error %>
            <div class="alert alert-danger">
              <%= @error["message"] %>
            </div>

          <% end %>
          <p><input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" ></p>
          <div class="form-group  d-flex align-items-center">
            <input type="text" class="form-control " name="organization_name" placeholder="Organization Name" required pattern="^[^.|\s]+$">
            <button type="submit" class="form-control col-md-4 btn btn-success btn-md ml-4 d-flex justify-content-center align-items-center">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
    </div>
  </div>
</div>