<div class="container">
  <div class="row justify-content-center">
    <%= button_to "Create new service", service_new_path, :method => "get" %>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-10">
      <table class="table table-hover text-center">
        <thead>
          <th>Service Name</th>
          <th>Action</th>
        </thead>

        <tbody>
          <% @services.each do |service|%>
            <tr>
              <td><%= service["name"] %></td>
              <td>
                <a href="/namespace/<%= service["name"] %>">
                  View Namespaces
                </a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
