<div class="row" id="app">
  <div class="col-md-3 sidebar">
    <%= render :partial => 'shared/organization'%>
  </div>
  <div class="col-md-9">
    <div class="container">
      <h3>Services</h3>
      <div class="section">
        <% if @services.length > 0 %>
          <% @services.each do |serv| %>
            <div class="card">
              <div class="card-body">
                <div class="row justify-content-between ml-4 mr-4">
                  <div>
                    <h6 class="card-title d-flex align-items-center mt-auto mb-auto ml-2"><a><%= serv["name"]%></a></h6>
                    <a href="/<%= params["organization"]%>/<%= serv["name"] %>/namespaces" class="btn btn-success btn-sm">Explore</a>
                  </div>
                  <div class="text-right">
                    <small class="color-disabled ">
                      <span><%= serv["created_by"] %> <i class="fa fa-user"></i></span><br>
                      <span><%= l(Time.parse(serv["created_at"]).in_time_zone, :format => :long) %> <i class="fa fa-calendar"></i></span><br>
                    </small>
                  </div>
                </div>
                <div class="d-flex">
                </div>
              </div>
            </div>
          <% end %>
        <%else %>
          <%= render :partial => 'shared/nodata' %>
        <% end %>

      </div>
      <div class="row justify-content-center mt-4">
        <a href="/<%= @org %>/services/new" class="btn btn-md btn-info d-flex align-items-center" style="text-decoration:none;">
          <i class="fa fa-plus-circle"></i>&nbsp;New
        </a>
      </div>
    </div>
  </div>
</div>
